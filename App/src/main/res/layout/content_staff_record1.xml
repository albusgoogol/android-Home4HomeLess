<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.compscitutorials.basigarcia.Home4HomelessPro.staff_record1"
    tools:showIn="@layout/activity_staff_record1">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="จากการติดต่อเจ้าหน้าที่โดยตรง"
            android:id="@+id/hedetv"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:background="#464646"
            android:textColor="#f4a13e"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="เลือกประเภท"
            android:layout_marginBottom="10dp"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="ค้นหาสถานที่"
            android:layout_weight="0.00"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="9dp"
            android:singleLine="true"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="9dp"
            android:textColor="@android:color/primary_text_light"
            />


    </LinearLayout>


            <TextView
                android:id="@+id/address"
                android:layout_width="561dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="ทดสอบี่"
                android:layout_below="@+id/name"
                android:layout_weight="0.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:text="เพศ"
                android:textSize="16dp"
                android:layout_marginTop="40dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชาย"
                android:id="@+id/radioButton" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หญิง"
                android:id="@+id/radioButton2" />

            <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="ชื่อ"
            android:ems="10"
            android:id="@+id/editText6"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="นามสกุล"
            android:ems="10"
            android:id="@+id/editText3"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:text="วัน เดือน ปี เกิด"
            android:textSize="16dp"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:ems="10"
            android:id="@+id/bdedittext"
            />

        <TextView
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:text="เลขประจำตัวประชาชน"
            android:textSize="16dp"

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText5"
            android:maxLength="13"/>

        <EditText
            android:id="@+id/etxt_fromdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
